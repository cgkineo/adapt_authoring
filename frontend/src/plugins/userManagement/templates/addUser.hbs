<div class="inner">
  <div class="title">
    {{t 'app.adduserformtitle'}}
  </div>
  <form class="addUser forms" action="/api/user" method="post" autocomplete="off">
      <div class="form-group">
        <label for="email">Email address <span class="req">*</span></label>
        <input type="email" name="email">
      </div>
      <div class="form-group">
          <label for="password">Password <span class="req">*</span>
          </label>
          <input type="password" name="password">
      </div>
      <div class="form-group">
        <label for="tenant">Tenant</label>
        <select name="_tenantId">
          {{#each globalData.allTenants.models}}
            <option value="{{{this.attributes._id}}}">{{{this.attributes.displayName}}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="role">System role</label>
        <select name="role">
          {{#each globalData.allRoles.models}}
            <option value="{{{this.attributes._id}}}">{{{this.attributes.name}}}</option>
          {{/each}}
        </select>
      </div>
  </form>
</div>
